#!/usr/bin/env groovy
// see https://jenkins.io/doc/book/pipeline/syntax/

pipeline {

    agent any

    parameters {
        booleanParam(name: "RELEASE",
                description: "Build a release from current commit.",
                defaultValue: false)
    }

    stages {
		
		stage ( '----clean---') {
			steps {
				sh "mvn clean"
			}
		}
		stage('---test--') {
			steps {
				sh "mvn test"
			}
		}
		stage ('----package---') {
			steps {
				sh "mvn package"
			}
		}

        stage("Deploy SNAPSHOT") {
            steps {
                ansiColor("xterm") {
                    sh "mvn -B deploy"
                }
            }
        }

        stage("Release") {
            when {
                expression { params.RELEASE }
            }
            steps {
                ansiColor("xterm") {
                    sh "mvn -B release:prepare"
                    sh "mvn -B release:perform"
                }
            }
        }

    }

    post {
        always {
            deleteDir()
        }
    }
}
